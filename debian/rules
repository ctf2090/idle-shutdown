#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	:

override_dh_auto_test:
	:

override_dh_auto_install:
	@cloud_init="$${CLOUD_INIT_PATH:-../gce-lubuntu-noble/cloud-init.yaml}"; \
	python3 ./export-idle-shutdown-assets.py \
		--cloud-init "$$cloud_init" \
		--idle-script ./idle-shutdown.sh \
		--out-dir ./debian/tmp \
		--git-rev package

override_dh_install:
	dh_install --sourcedir=debian/tmp

override_dh_usrlocal:
	:
